<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">

        <View
            android:id="@+id/imageShimmerOne"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:background="@color/shimmer_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer_bg"
            app:layout_constraintStart_toStartOf="@id/imageShimmerOne"
            app:layout_constraintTop_toBottomOf="@id/imageShimmerOne" />

        <View
            android:id="@+id/imageShimmerTwo"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:background="@color/shimmer_bg"
            app:layout_constraintLeft_toRightOf="@id/imageShimmerOne"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer_bg"
            app:layout_constraintStart_toStartOf="@id/imageShimmerTwo"
            app:layout_constraintTop_toBottomOf="@id/imageShimmerTwo" />

        <View
            android:id="@+id/imageShimmerThree"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:background="@color/shimmer_bg"
            app:layout_constraintLeft_toRightOf="@id/imageShimmerTwo"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer_bg"
            app:layout_constraintStart_toStartOf="@id/imageShimmerThree"
            app:layout_constraintTop_toBottomOf="@id/imageShimmerThree" />

        <View
            android:id="@+id/imageShimmerFour"
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:background="@color/shimmer_bg"
            app:layout_constraintLeft_toRightOf="@id/imageShimmerThree"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="125dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@color/shimmer_bg"
            app:layout_constraintStart_toStartOf="@id/imageShimmerFour"
            app:layout_constraintTop_toBottomOf="@id/imageShimmerFour" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>